<div>
    <b>Filtros:</b> 
    <label for="category">Categoria:</label>
        <select name="category" id="category">
            {{#each categories}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </label>
    <label for="inStock">Solo Disponibles:</label>
        <input type="checkbox" name="inStock" id="inStock">
    <label for="order">Ordenar por:</label>
        <select name="order" id="order">
            <option value="price">Precio</option>
            <option value="title">Nombre</option>
        </select>
        <select name="asc" id="asc">
            <option value="1">Ascendente</option>
            <option value="-1">Descendente</option>
        </select>
    </label>
    <a href='javascript:void(0);' onclick='newFilter()' class="btn btn-primary">Filtrar</a>
    <a class="float-right" style="margin-right:1rem" href='javascript:void(0);' onclick='showCart()'>
        ðŸ›’
        <b class=".bg-info" id="itemsInCart"></b>
    </a>
</div>
<div class="d-flex flex-lg-row flex-lg-wrap" id="product-container">
    {{#each products}}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src={{thumbnails.[0]}} alt="Card image cap">
        <div class="card-body">
        <h5 class="card-title"><a href='javascript:void(0);' onclick='showProduct("{{_id}}")'>{{title}}</a></h5>
        <p class="card-text">{{price}}</p>
        <a href='javascript:void(0);' onclick='addToCart("{{_id}}")' class="btn btn-primary">Agregar al Carrito ðŸ›’</a>
    </div>
</div>
    {{/each}}
</div>
<div class="d-flex flex-justify" id="page-container">
    <a href='javascript:void(0);' onclick='newPage(`{{prevLink}}`)'>{{prevPage}}</a>
    <p>{{page}}</p>
    <a href='javascript:void(0);' onclick='newPage(`{{nextLink}}`)'>{{nextPage}}</a>    
</div>
<script>
    const cart="{{{cart}}}"  
</script>
<script src=".\js\index.js" type="text/javascript"></script>
